# GenHook Web Interface Production Configuration Example
# Copy this file to web-config.prod.ini and customize for production deployment

[web]
enabled = true
base_path = /config
static_path = /static
template_path = templates/

[security]
require_auth = false
allowed_ips = 127.0.0.1,192.168.0.0/16
max_payload_size = 10MB
session_timeout = 3600

[features]
auto_restart_service = true
restart_on_save = true
backup_configs = true
backup_retention_days = 30
enable_config_validation = true
enable_live_preview = true

[service]
supervisor_program_name = genhook
config_file_path = config/webhook-config.ini
restart_command = sudo supervisorctl restart genhook
backup_directory = backups/configs/

[ui]
theme = default
show_sample_values = true
max_fields_display = 100
default_message_template = $service$ Alert: $summary$

[logging]
log_level = INFO
log_file = /var/log/genhook/web-interface.log
enable_access_log = true

# Notes:
# - To use this config: cp web-config.prod.ini.example web-config.prod.ini
# - GenHook automatically uses .prod.ini if it exists
# - Production settings: restart_on_save = true, sudo restart command
# - Development uses web-config.ini with restart_on_save = false